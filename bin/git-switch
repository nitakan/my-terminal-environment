#!/bin/zsh

# Git user configuration switcher
# Configure your accounts by editing this script or creating a config file

# TODO: カスタマイズ - アカウント名を追加・変更してください
accounts=("personal" "work")

# fzfでアカウントを選択
selected_account=$(printf '%s\n' "${accounts[@]}" | fzf --prompt="Select Git account: ")

# 選択したアカウントに応じて設定を変更
# TODO: カスタマイズ - 各アカウントの user.name と user.email を設定してください
case "$selected_account" in
    "personal")
        git config --global user.name "YourName"
        git config --global user.email "your.email@example.com"
        echo "Switched to personal account"
        ;;
    "work")
        git config --global user.name "YourWorkName"
        git config --global user.email "your.work.email@company.com"
        echo "Switched to work account"
        ;;
    *)
        echo "No account selected or invalid choice."
        ;;
esac
